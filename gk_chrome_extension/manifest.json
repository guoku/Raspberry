{
  "manifest_version": 2,
  "name": "果库 小助手",
  "version": "1.0",
  "description": "For guoku'er add taobao item",
  "author": "evantre",
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "add item to guoku",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://item.taobao.com/*", "http://*.tmall.com/*", "http://*.jd.com/*"],
      "css": ["css/helper.css"],
      "js": ["js/jquery-1.11.1.min.js", "js/helper.js"]
      // "run_at": "document_end" 
    }
  ],
  "permissions": ["tabs", "http://admin.guoku.com/", "http://test.guoku.com/"]
}
